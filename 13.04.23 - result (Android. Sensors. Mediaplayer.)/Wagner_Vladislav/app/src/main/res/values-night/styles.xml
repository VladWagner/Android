<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="PropertyName">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">8dp</item>

        <item name="android:textSize">17sp</item>
    </style>

    <style name="CardViewStatistics">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/dark_theme_card_bg</item>
        <item name="cardElevation">2dp</item>

        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!--Элемент коллекции в Recycler view-->
    <style name="CardViewStatisticsRcvItem" parent="@style/CardViewStatistics">

        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>

        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="RelativeLayoutCard">
        <item name="android:paddingStart">10dp</item>

    </style>
    <style name="RelativeLayoutCardDialog">
        <item name="android:paddingStart">4dp</item>
    </style>

    <!--Text view для элемента recycler view-->
    <style name="RecyclerViewItemTxv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="dialog">
        <item name="android:background">@color/dark_theme_dialog_bg</item>

    </style>

    <style name="background_less_button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>

    <item name="android:background">@drawable/transparent_button</item>
    <item name="android:textColor">@color/white</item>
</style>

</resources>