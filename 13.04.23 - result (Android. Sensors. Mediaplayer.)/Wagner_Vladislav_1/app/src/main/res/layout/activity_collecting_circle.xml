<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CollectingActivity">


    <TextView
        android:id="@+id/collectingActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/service_activity_title"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnStopCollecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collectingActivityTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/conduct_el_main"
        android:paddingVertical="6dp"
        android:text="@string/btn_stop_collecting"
        android:textSize="11sp" />


    <!--Фрагмент для вывода коллекци-->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width ="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/collectingActivityTitle"
        android:layout_marginTop="65dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/progress_circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/collectingActivityTitle"

        android:layout_alignTop="@+id/progressBar"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart ="99dp"
        android:layout_marginEnd="99dp"

        android:layout_marginTop="105dp"
        android:layout_marginBottom="105dp"

        android:orientation="vertical">

        <!--Акселерометер-->
        <TextView
            android:id="@+id/accelerometerTxv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textSize="17sp" />

        <!--Датчик приближения-->
        <TextView
            android:id="@+id/approximationTxv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textSize="17sp" />

        <!--Датчик освещения-->
        <TextView
            android:id="@+id/lightTxv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textSize="17sp" />
    </LinearLayout>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.step.wagner.fragments.ContainerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="12dp"
        android:visibility="gone"
        android:layout_below="@+id/collectingActivityTitle"
        />

</RelativeLayout>