<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/subscriptionFormTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:gravity="start"
            android:paddingTop="7dp"
            android:paddingBottom="8dp"
            android:text="@string/subscription_dialog_date_label"
            android:textSize="18sp" />


        <!--Дата начала подписки-->
        <Button
            android:id="@+id/appointmentDateDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="8dp"
            android:text="@string/appointment_dialog_date_btn"
            android:textSize="14sp" />

        <!--Издания-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:gravity="start"
            android:paddingTop="7dp"
            android:paddingBottom="8dp"
            android:text="@string/subscription_dialog_publication_label"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/publicationsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="7dp"
            android:paddingBottom="12dp" />

        <!--Длительность-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:gravity="start"
            android:paddingTop="7dp"
            android:paddingBottom="8dp"
            android:text="@string/subscription_dialog_duration_label"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etxDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:hint="@string/subscription_dialog_duration_hint"
            android:inputType="number"
            android:paddingTop="7dp"
            android:paddingBottom="12dp"
            android:textSize="20sp" />


        <!--Сохранять данные-->
        <Switch
            android:id="@+id/swtSaveInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:visibility="gone"
            android:gravity="start"
            android:paddingTop="7dp"
            android:paddingBottom="8dp"
            android:text="@string/subscription_dialog_swt"
            android:textSize="18sp" />


    </LinearLayout>
</ScrollView>